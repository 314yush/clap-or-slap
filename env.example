# ============================================
# CapOrSlap Environment Variables
# ============================================
# Copy this file to .env.local and fill in your values
# cp env.example .env.local

# ============================================
# UPSTASH REDIS (Required for Leaderboard & Game State)
# ============================================
# Get these from https://console.upstash.com/
# Create a new Redis database and copy the REST credentials

UPSTASH_REDIS_REST_URL=https://your-redis-url.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-redis-token-here

# ============================================
# PRIVY AUTH (Required for Wallet Connect)
# ============================================
# Get these from https://dashboard.privy.io/
# Create a new app and copy the App ID

NEXT_PUBLIC_PRIVY_APP_ID=your-privy-app-id
PRIVY_APP_SECRET=your-privy-secret

# ============================================
# IDENTITY RESOLUTION (Optional but recommended)
# ============================================
# Neynar API for Farcaster identity lookup
# Get from https://neynar.com/
NEYNAR_API_KEY=your-neynar-key

# Alchemy for ENS resolution
# Get from https://dashboard.alchemy.com/
NEXT_PUBLIC_ALCHEMY_ID=your-alchemy-id

# ============================================
# FEATURE FLAGS
# ============================================
# Enable/disable features

# Analytics tracking (uses Redis)
ANALYTICS_ENABLED=true

# Reprieve system - allow users to continue after loss for $1
NEXT_PUBLIC_FEATURE_REPRIEVE=true

# Make reprieves free during testing
NEXT_PUBLIC_REPRIEVE_FREE=true

# Wallet connect enabled
NEXT_PUBLIC_FEATURE_WALLET_CONNECT=true

# ============================================
# API KEYS (Optional - for higher rate limits)
# ============================================
# CoinGecko Pro API key (optional, increases rate limits)
# Get from https://www.coingecko.com/en/api/pricing
# COINGECKO_API_KEY=your-api-key

# ============================================
# APP CONFIGURATION
# ============================================
# Base URL for sharing links
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ============================================
# PAYMENT CONFIGURATION
# ============================================
# Treasury wallet address for USDC payments (Base network)
# This is where reprieve payments ($1 USDC) will be sent
NEXT_PUBLIC_TREASURY_ADDRESS=0xYourTreasuryWalletAddressHere

# USDC Contract on Base: 0x833589fCD6eDb6E08f4c7C32D4f71b54bdA02913

# ============================================
# LEGACY PAYMENT PROVIDERS (Not used - keeping for reference)
